{% extends 'base.html.twig' %}

{% block title %}LineUp
{% endblock %}

{% block body %}
	<div class="flex flex-col justify-center items-center font-fontTitle">
		<h1 class="text-white text-4xl mt-32">Line up 2025</h1>

		<div class="mt-32 mx-10 flex flex-wrap items-end justify-center gap-8">
			{% for groupe in groupes %}
				{# card #}
				<div class="gradientCard flex flex-col w-[20rem] h-[24rem] bg-bgBlack rounded-lg transition-all duration-500 ease-in brightness-90 opacity-90 transform rotate-[-2deg] hover:rotate-0 hover:scale-125 hover:shadow-2xl hover:brightness-100 hover:opacity-100 group hover:z-50 relative">
					<div class="flex justify-center items-center w-full h-[55%] text-white rounded-t-lg overflow-hidden">
						<img class="w-full h-full rounded-t-lg transition-transform duration-500 ease-in group-hover:scale-110" src="/uploads/{{ groupe.photo}}">
					</div>
					<div class="w-full h-[25%] flex justify-center mt-4">
						<img class="max-w-[70%] max-h-[70%] objet-contain transition-transform duration-500 ease-in group-hover:scale-125" src="/uploads/{{ groupe.logo}}">
					</div>
					<div class="flex flex-col items-center w-full h-[20%]">
						<h2 class="text-white">{{ groupe.nomGroupe }}</h2>
						<div class="flex mr-2 mt-auto">
							<button type="button" class="text-white hover:bg-gray-900 font-medium rounded-l-lg text-sm px-5 py-1 mb-2 mt-auto">View</button>
							<button type="button" class="text-white hover:bg-gray-900 font-medium rounded-r-lg text-sm px-5 py-1 mb-2 mt-auto">Add</button>
						</div>
					</div>
				</div>
			{% endfor %}

		</div>
	</div>

{% endblock %}
